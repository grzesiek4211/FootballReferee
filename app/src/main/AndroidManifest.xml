<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/football_13302"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">

        <service
            android:name=".presentation.AlarmNotificationService"
            android:foregroundServiceType="specialUse"
            android:exported="false">
            <property android:name="android.app.PROPERTY_SPECIAL_USE_CATEGORY"
                android:value="timer_alarm_signal" />
        </service>

        <receiver
            android:name=".presentation.TimerExpiredReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.myapplication.presentation.ACTION_TIMER_EXPIRED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".presentation.FullScreenAlarmActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:showOnLockScreen="true"
            android:theme="@style/Theme.MainActivityTheme.Dark"
            android:turnScreenOn="true" />

        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".presentation.TimerSetupActivity"
            android:exported="true"
            android:theme="@style/Theme.MainActivityTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.PlayersSetupActivity"
            android:exported="true"
            android:theme="@style/Theme.MainActivityTheme.Dark" />

        <activity
            android:name=".presentation.TeamSetupActivity"
            android:exported="true"
            android:theme="@style/Theme.MainActivityTheme.Dark" />

        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.MainActivityTheme.Dark" />

    </application>
</manifest>